{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": [],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@portfolio/types/*": ["../../shared/types/*"],
      "@portfolio/utils/*": ["../../shared/utils/*"],
      "@portfolio/utils": ["../../shared/utils"],
      "@schemas/*": ["./schemas/*"],
      "@components/atoms/*": ["./schemas/components/atoms/*"],
      "@components/molecules/*": ["./schemas/components/molecules/*"],
      "@components/organisms/*": ["./schemas/components/organisms/*"],
      "@components/settings/*": ["./schemas/components/settings/*"],
      "@components/*": ["./schemas/components/*"],
      "@utils/*": ["./utils/*"],
      "@structure/*": ["./structure/*"],
      "@studio/types": ["./types/index.ts"],
      "@studio/types/*": ["./types/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
