# ===========================================
# SHARED ENVIRONMENT VARIABLES
# ===========================================
# Single source of truth for all apps in the monorepo
# Copy this file to .env and fill in your actual values

# Sanity Configuration (define once, used by all apps)
SANITY_PROJECT_ID=your-project-id
SANITY_DATASET=production

# Sanity API Tokens (server-side only - used by Next.js)
SANITY_API_READ_TOKEN=your-read-token-here
SANITY_PREVIEW_SECRET=your-preview-secret-here

# Studio Host (optional - for Sanity Studio deployment)
SANITY_STUDIO_HOST=your-studio-host

# Note: 
# SANITY_STUDIO_PROJECT_ID and SANITY_STUDIO_DATASET are auto-generated
# from SANITY_PROJECT_ID and SANITY_DATASET by the studio build script
# No duplication needed!

# Public contact email shown on the site
NEXT_PUBLIC_CONTACT_EMAIL=hello@joey.co

# Base URL for generating absolute links (e.g., sitemap)
SITE_URL=https://your-domain.com

# Allow or disallow crawlers via robots.txt (defaults to allow in production)
ALLOW_CRAWLERS=false
